<section class="text-gray-700 dark:text-gray-500 dark:bg-gray-900 body-font">
  <div class="container mx-auto flex px-5 py-24 md:flex-row flex-col items-center">
    <div class="lg:flex-grow md:w-1/2 lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center">
      <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900 dark:text-white">
        No matter what
        <br class="hidden lg:inline-block">
        you're looking forâ€¦
      </h1>
      <p class="mb-8 leading-relaxed">
        Leaply can help you find it. Whether it's your dream job, a chance to get into
        that great school or just an event to help refine your skills.
      </p>
      <div class="flex justify-center">
        <button phx-click="info_flash"
          class="
            text-white bg-orange-500 hover:bg-orange-600
            dark:text-white dark:bg-orange-500 dark-hover:bg-orange-600
            inline-flex  border-0 py-2 px-6 focus:outline-none rounded text-lg
          "
        >
          Info
        </button>
        <button phx-click="error_flash"
          class="
            text-gray-700 bg-gray-200 hover:bg-gray-300
            dark:text-gray-400 dark:bg-gray-800 dark-hover:bg-gray-700 dark-hover:text-white
            ml-4 inline-flex border-0 py-2 px-6 focus:outline-none rounded text-lg
          "
        >
          Error
        </button>
      </div>
    </div>
    <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6">
      <img class="object-cover object-center rounded" alt="hero" src="https://dummyimage.com/720x600">
    </div>
  </div>
</section>

<!-- Stats -->
<section class="text-gray-500 dark:bg-gray-900 body-font">
  <div class="container px-5 py-12 mx-auto flex flex-wrap">
    <div class="lg:w-1/2 sm:w-1/3 w-full rounded-lg overflow-hidden mb-6 sm:mb-0">
      <img class="object-cover object-center w-full h-full" src="https://dummyimage.com/600x300" alt="stats">
    </div>
    <div class="flex flex-wrap -mx-4 mt-auto mb-auto lg:w-1/2 sm:w-2/3 content-start sm:pl-10">
      <div class="w-full sm:p-4 px-4 mb-6">
        <h1 class="title-font font-medium text-xl mb-2 text-gray-900 dark:text-white">
          Always working in the background
        </h1>
        <div class="leading-relaxed">
          even when you log off, Leaply is constantly looking for that perfect fit...
        </div>
      </div>
      <div class="p-4 sm:w-1/2 lg:w-1/4 w-1/2">
        <h2 class="title-font font-medium text-3xl text-gray-700 dark:text-white"><%= @users %></h2>
        <p class="leading-relaxed">Users</p>
      </div>
      <div class="p-4 sm:w-1/2 lg:w-1/4 w-1/2">
        <h2 class="title-font font-medium text-3xl text-gray-700 dark:text-white"><%= @listings %></h2>
        <p class="leading-relaxed">Listings</p>
      </div>
      <div class="p-4 sm:w-1/2 lg:w-1/4 w-1/2">
        <h2 class="title-font font-medium text-3xl text-gray-700 dark:text-white"><%= @companies %></h2>
        <p class="leading-relaxed">Companies</p>
      </div>
      <div class="p-4 sm:w-1/2 lg:w-1/4 w-1/2">
        <h2 class="title-font font-medium text-3xl text-gray-700 dark:text-white"><%= @placements %></h2>
        <p class="leading-relaxed">Placements</p>
      </div>
    </div>
  </div>
</section>

